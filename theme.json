{
	"$schema": "https://json.schemastore.org/theme-v1.json",
  "version": 2,
	"templateParts": [
		{
			"name": "header",
			"area": "header"
		},
		{
			"name": "footer",
			"area": "footer"
		}
	],
	"settings": {
		"color": {
			"link": true,
			"palette": [
				{
					"slug": "dark",
					"color": "#273B3B",
					"name": "Dark"
				},
				{
					"slug": "white",
					"color": "#FFFFFF",
					"name": "White"
				},
				{
					"slug": "gray",
					"color": "#516365",
					"name": "Gray"
				},
				{
					"slug": "green",
					"color": "#3BA974",
					"name": "Green"
				},
				{
					"slug": "land",
					"color": "#B79A4E",
					"name": "Land"
				},
				{
					"slug": "light-green",
					"color": "#ECF6F0",
					"name": "Light Green"
				},
				{
					"slug": "light-land",
					"color": "#F5F0E3",
					"name": "Light Land"
				}
			]
		},
		"typography": {
			"dropCap": true,
			"lineHeight": true,
			"customFontSize": true,
			"customLineHeight": true,
			"fontFamilies": [
				{
					"fontFamily": "\"Rubik\", sans-serif",
					"slug": "rubik",
					"name": "Rubik",
					"google": "family=Rubik:wght@300;400;500;700"
				},
				{
					"fontFamily": "\"Domine\", serif",
					"slug": "domine",
					"name": "Domine",
					"google": "family=Domine:wght@400;700"
				}
			],
			"fontSizes": [
				{
					"name": "Tiny",
					"size": "0.8rem",
					"slug": "tiny"
				},
				{
					"name": "Small",
					"size": "0.9rem",
					"slug": "small"
				},
				{
					"name": "Normal",
					"size": "1rem",
					"slug": "normal"
				},
				{
					"name": "Medium",
					"size": "1.125rem",
					"slug": "medium"
				},
				{
					"name": "Large",
					"size": "clamp(1.5rem, 3vw, 2rem)",
					"slug": "large"
				},{
					"name": "Extra Large",
					"size": "clamp(1.75rem, 3vw, 2.25rem)",
					"slug": "extra-large"
				},
				{
					"name": "Gigantic",
					"size": "clamp(2.5rem, 4vw, 3rem)",
					"slug": "gigantic"
				}
			]
		},
		"layout": {
			"contentSize": "1000px",
			"wideSize": "1400px"
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"units": ["%", "px", "rem", "vh", "vw"]
		},
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"custom": {
			"spacing": {
				"baseline": "16px"
			},
			"line-height": {
				"body": 1.4,
				"heading": 1.1
			}
		}
	},
	"styles": {
		"blocks": {
			"core/button": {
				"border": {
					"radius": "8px"
				},
				"color": {
					"background": "var(--wp--preset--color--green)",
					"text": "var(--wp--preset--color--white)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--rubik)",
					"fontSize": "var(--wp--preset--typography--font-size--normal)"
				},
				"spacing": {
          "padding": {
              "top": "15px",
              "right": "40px",
              "bottom": "15px",
              "left": "40px"
          }
        }
			},
			"core/paragraph": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--rubik)",
					"lineHeight": "var(--wp--custom--line-height--body)"
				},
				"color": {
					"text": "var(--wp--preset--color--gray-text)"
				}
			},
			"core/heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--domine)",
					"lineHeight": "var(--wp--custom--line-height--heading)"
				},
				"color": {
					"text": "var(--wp--preset--color--dark)"
				}
			}
		},
		"elements": {
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--domine)",
					"fontWeight": "700",
					"lineHeight": "var(--wp--custom--line-height--heading)",
					"fontSize": "var(--wp--preset--font-size--gigantic)"
				},
				"spacing": {
          "margin": {
              "top": "1rem",
              "bottom": "1rem"
          }
        }
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--rubik)",
			"lineHeight": "var(--wp--custom--line-heigth--body)",
			"fontSize": "var(--wp--preset--font-size--normal)"
		},
		"spacing": {
			"blockGap": "2rem"
		}
	}
}